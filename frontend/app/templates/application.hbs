<div class="app">

    <header class="header">
        <div class="header__logo__wrapper">
            <a class="header__logo" href="#">Ember</a>
        </div>
        <div class="header__menu">
            {{#link-to 'users'}}
            <a href="users">Users</a>
            {{/link-to}}
            {{#link-to 'groups'}}
            <a href="groups">Groups</a>
            {{/link-to}}
        </div>
    </header>

    <div class="content">
        <button {{ action  'getUsers' }}> Read users</button>
        <div>
            Читать все:
            <ul>
                {{#each model as |user| }}
                <li> {{user.firstName}} </li>
                {{/each}}
            </ul>
        </div>
    </div>

    <footer class="footer">
    </footer>
</div>